            visible="false">
      </view>
   </perspectiveExtension>
</extension>


   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerActionBinding
            viewerId="edu.uah.itsc.cmac.NavigatorView">
         <includes>
            <actionExtension
                  pattern="edu.uah.itsc.cmac.ui.EditActionExtension">
            </actionExtension>
         </includes>
      </viewerActionBinding>    
   </extension>
   
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <actionProvider
            class="edu.uah.itsc.cmac.ui.CMACEditActionProvider"
            id="edu.uah.itsc.cmac.ui.EditActionExtension"
            overrides="org.eclipse.ui.navigator.resources.actions.EditActions"
            priority="highest">
         <enablement>
         <!-- A hack to allways be enabled -->
         <not>
            <systemTest
                  property="MyApp"
                  value="WONT-EVER-BE-SET">
            </systemTest>
         </not>
         </enablement>
     </actionProvider>
   </extension>

   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerActionBinding
            viewerId="edu.uah.itsc.cmac.NavigatorView">
         <includes>
            <actionExtension
