<extension point="org.eclipse.ui.commands">
  <command
        description="Execute the workflow in cloud"
        id="edu.uah.itsc.cmac.Execute"
        name="Execute Workflow"
        >
  </command>
</extension>

<extension point="org.eclipse.ui.handlers">
  <handler
        class="edu.uah.itsc.cmac.actions.ExecuteCommandHandler"
        commandId="edu.uah.itsc.cmac.Execute">
     <enabledWhen>
        <with variable="selection">
           <iterate
                 ifEmpty="false"
                 operator="and">
              <test
                    property="my.property.namespace.type"
                    value="execute">
              </test>
           </iterate>
        </with>
     </enabledWhen>
  </handler>
</extension>

<extension point="org.eclipse.ui.menus">
  <menuContribution locationURI="popup:org.eclipse.ui.popup.any?after=additions">
     <command
           commandId="edu.uah.itsc.cmac.Execute"
           style="push"
           icon="icons/execute-16x16.png">
        <visibleWhen>
            <with variable="activeMenuSelection">
               <iterate>
                  <instanceof
                     value="org.eclipse.core.resources.IFile">
                  </instanceof>
               </iterate>
           </with>
        </visibleWhen>
     </command>
  </menuContribution>
</extension>

