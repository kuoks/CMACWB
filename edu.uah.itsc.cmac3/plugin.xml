<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="edu.uah.itsc.cmac.ui.Perspective"
            icon="icons/cmac-16x16.png"
            id="edu.uah.itsc.cmac.perspective"
            name="CMACWB">
      </perspective>
   </extension>
<extension
      point="org.eclipse.ui.views">
      <category 
      	id="edu.uah.itsc.glider.navigator.category"
      	name="Community Navigator" />   
      <view
            allowMultiple="false"
            name="Experiments"
            class="edu.uah.itsc.cmac.ui.NavigatorView"
            id="edu.uah.itsc.cmac.NavigatorView">
      </view>
</extension>
<extension point="org.eclipse.ui.navigator.viewer">
   <viewerContentBinding 
        viewerId="edu.uah.itsc.cmac.NavigatorView">
      <includes>
   	     <contentExtension pattern="org.eclipse.ui.navigator.resourceContent" />  	
   	     <contentExtension pattern="org.eclipse.ui.navigator.resources.filters.*"/>
   	     <contentExtension pattern="edu.uah.itsc.cmac.filters.*"/>      	      
      </includes>
   </viewerContentBinding>
   <viewerActionBinding viewerId="edu.uah.itsc.cmac.NavigatorView">
         <includes>
             <actionExtension pattern="org.eclipse.ui.navigator.resources.*" />
         </includes>
   </viewerActionBinding>
</extension>
   <extension point="org.eclipse.ui.menus">
  <menuContribution 
        locationURI="popup:org.python.pydev.editor.PythonEditor.EditorContext">
    <dynamic
        class="org.eclipse.ecf.docshare.menu.DocShareRosterMenuContributionItem"
        id="edu.uah.itsc.cmac.shreedhan.pythonEditorMenuContribution">
    </dynamic>
  </menuContribution>
</extension>
<extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <command
               commandId="my id"
               label="my command label"
               style="push">
          <visibleWhen>
           <with variable="activeMenuSelection">
            <iterate
                 ifEmpty="false">
             <adapt type="org.eclipse.core.resources.IResource">
               <test property="org.eclipse.core.resources.name" value="*.txt" />
             </adapt>
            </iterate>
           </with>
         </visibleWhen>
       </command>
      </menuContribution>
</extension>
<extension point="org.eclipse.ui.navigator.viewer">
   <viewer  viewerId="edu.uah.itsc.cmac.NavigatorView">
   	<popupMenu allowsPlatformContributions="true"
   				id="edu.uah.itsc.cmac.PopupMenu">
        <insertionPoint name="group.new"/>	
   		<insertionPoint name="group.port"/>	
   		<insertionPoint name="group.edit"/>
   		<insertionPoint name="group.build"/>
   		<insertionPoint name="group.reorganize"/>
   		<insertionPoint name="group.properties"/> 
   		
   		
   	</popupMenu>			
   </viewer>
</extension>
