            </actionExtension>
         </includes>
      </viewerActionBinding>    
   </extension>
   
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <actionProvider
            class="edu.uah.itsc.cmac.ui.CMACNewActionProvider"
            id="edu.uah.itsc.cmac.ui.NewActionExtension"
            overrides="org.eclipse.ui.navigator.resources.actions.NewActions"
            priority="highest">
         <enablement>
         
         <not>
            <systemTest
                  property="MyApp"
                  value="WONT-EVER-BE-SET">
            </systemTest>
         </not>
         </enablement>
     </actionProvider>
   </extension>
   
      <extension
         point="org.eclipse.ui.navigator.viewer">
