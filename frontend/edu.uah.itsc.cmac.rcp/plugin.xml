<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="edu.uah.itsc.cmac.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.edit.text.openLocalFile"
                  label="Open File"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.save"
                  label="Save">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAll"
                  label="Save All"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.print"
                  label="Print"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
         <menu
               label="Edit">
            <command
                  commandId="org.eclipse.ui.edit.cut"
                  label="Cut"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.copy"
                  label="Copy"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.paste"
                  label="Paste"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.delete"
                  label="Delete"
                  style="push">
            </command>
         </menu>
         <menu
               label="Cmac">
            <command
                  commandId="edu.uah.itsc.cmac3.AddExperiment"
                  label="Add Experiment"
                  style="push">
            </command>
            <command
                  commandId="edu.uah.itsc.cmac.AddVersion"
                  label="Add Version"
                  style="push">
            </command>
            <command
                  commandId="edu.uah.itsc.cmac.Share"
                  label="Share"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="edu.uah.itsc.cmac.rcp.toolbar">
            <command
                  commandId="org.eclipse.ui.file.save"
                  label="Save"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAll"
                  label="Save All"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.print"
                  label="Print"
                  style="push">
            </command>
            <separator
                  name="edu.uah.itsc.cmac.rcp.editSeparator"
                  visible="true">
            </separator>
                        <command
                  commandId="org.eclipse.ui.edit.cut"
                  label="Cut"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.copy"
                  label="Copy"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.paste"
                  label="Paste"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.delete"
                  label="Delete"
                  style="push">
            </command>
            <separator
                  name="edu.uah.itsc.cmac.rcp.cmacSeparator">
            </separator>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         id="cmacwb"
         point="org.eclipse.core.runtime.products">
      <product
            application="edu.uah.itsc.cmac.rcp.application"
            name="CMAC Workbench">
         <property
               name="windowImages"
               value="platform:/plugin/edu.uah.itsc.cmac3/icons/branding_files/cmac-16x16.png,platform:/plugin/edu.uah.itsc.cmac3/icons/branding_files/cmac-32x32.png,platform:/plugin/edu.uah.itsc.cmac3/icons/branding_files/cmac-48x48.png,platform:/plugin/edu.uah.itsc.cmac3/icons/branding_files/cmac-64x64.png,platform:/plugin/edu.uah.itsc.cmac3/icons/branding_files/cmac-128x128.png">
         </property>
         <property
               name="aboutText"
               value="CMAC Workbench is provided by UAH ITSC. For more information visit http://www.itsc.uah.edu">
         </property>
         <property
               name="appName"
               value="CMAC Workbench">
         </property>
      </product>
   </extension>
</plugin>
