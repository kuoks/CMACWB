              <test
                    property="my.property.namespace.type"
                    value="ShowVersionList">
              </test>
           </iterate>
        </with>
        </visibleWhen>
     </command>
          <command
           commandId="edu.uah.itsc.cmac.AddVersion"
           style="push"
           icon="icons/add_version.png">
        <visibleWhen>
        <with variable="selection">
           <iterate
                 ifEmpty="false"
                 operator="and">
              <test
                    property="my.property.namespace.type"
                    value="AddVersion">
              </test>
           </iterate>
        </with>
        </visibleWhen>
     </command>
     <command
           commandId="edu.uah.itsc.cmac.UpdateCommand"
           style="push"
           icon="icons/update.png">
        <visibleWhen>
        <with variable="selection">
           <iterate
                 ifEmpty="false"
                 operator="and">
              <test
                    property="my.property.namespace.type"
                    value="UpdateCommand">
              </test>
           </iterate>
        </with>
        </visibleWhen>
     </command>
          <command
           commandId="edu.uah.itsc.cmac.NewFile"
           icon="icons/branding_files/cmac-16x16.png"
