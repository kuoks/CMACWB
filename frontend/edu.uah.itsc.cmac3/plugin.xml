<extension point="org.eclipse.ui.menus">
  <menuContribution locationURI="popup:org.eclipse.ui.popup.any?after=additions">
     <command
           commandId="edu.uah.itsc.cmac.Execute"
           style="push"
           icon="icons/execute-16x16.png">
        <visibleWhen>
            <with variable="activeMenuSelection">
               <iterate>
                  <instanceof
                     value="org.eclipse.core.resources.IFile">
                  </instanceof>
               </iterate>
           </with>
        </visibleWhen>
     </command>
          <command
           commandId="edu.uah.itsc.cmac.Upload"
           style="push"
           icon="icons/upload-16x16.png">
        <visibleWhen>
            <with variable="activeMenuSelection">
               <iterate>
                  <instanceof
                     value="org.eclipse.core.resources.IResource">
                  </instanceof>
               </iterate>
           </with>
        </visibleWhen>
     </command>
     <command
           commandId="edu.uah.itsc.cmac.Share"
           style="push"
           icon="icons/share-16x16.png">
        <visibleWhen>
            <with variable="activeMenuSelection">
               <iterate>
                  <instanceof
                     value="org.eclipse.core.resources.IFolder">
                  </instanceof>
               </iterate>
           </with>
        </visibleWhen>
     </command>
     <command
           commandId="edu.uah.itsc.cmac.ImportWorkflow"
           style="push"
           icon="icons/import.png">
        <visibleWhen>
        <with variable="selection">
           <iterate
                 ifEmpty="false"
                 operator="and">
              <test
                    property="my.property.namespace.type"
                    value="import">
              </test>
           </iterate>
        </with>
        </visibleWhen>
     </command>
          <command
           commandId="edu.uah.itsc.cmac.Delete"
           style="push"
           icon="icons/delete.png">
        <visibleWhen>
            <with variable="selection">
           <iterate
                 ifEmpty="false"
                 operator="and">
              <test
                    property="my.property.namespace.type"
                    value="delete">
              </test>
           </iterate>
        </with>
        </visibleWhen>
     </command>
     <command
           commandId="edu.uah.itsc.cmac.Refresh"
           style="push"
           icon="icons/refresh-16x16.png">
        <visibleWhen>
            <with variable="activeMenuSelection">
               <iterate>
                  <instanceof
                     value="org.eclipse.core.resources.IProject">
                  </instanceof>
               </iterate>
           </with>
        </visibleWhen>
     </command>
     <command
           commandId="edu.uah.itsc.cmac3.AddExperiment"
           icon="icons/experiment.png"
           label="Add Experiment"
           style="push">
     </command>
      <command
           commandId="edu.uah.itsc.cmac.InitTrackingWorkflow"
           style="push"
           icon="icons/new_workflow.png">
        <visibleWhen>
        <with variable="selection">
           <iterate
                 ifEmpty="false"
                 operator="and">
              <test
                    property="my.property.namespace.type"
                    value="initTrackingWorkflow">
              </test>
           </iterate>
        </with>
        </visibleWhen>
     </command>
     <command
           commandId="edu.uah.itsc.cmac.SaveForTrackingWorkflow"
           style="push"
           icon="icons/save.gif">
        <visibleWhen>
        <with variable="selection">
           <iterate
                 ifEmpty="false"
                 operator="and">
              <test
                    property="my.property.namespace.type"
                    value="saveForTrackingWorkflow">
              </test>
           </iterate>
        </with>
        </visibleWhen>
     </command>
     <command
           commandId="edu.uah.itsc.cmac.ShowVersionList"
           style="push"
           icon="icons/versions.png">
        <visibleWhen>
        <with variable="selection">
           <iterate
                 ifEmpty="false"
